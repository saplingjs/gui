{
	"name": "@sapling/gui",
	"version": "0.1.0",
	"license": "MIT",
	"description": "GUI for developing Sapling apps",
	"type": "module",
	"keywords": [
		"sapling",
		"saplingjs",
		"ui",
		"gui",
		"admin",
		"panel"
	],
	"bin": {
		"saplingui": "./index.js"
	},
	"homepage": "https://www.saplingjs.com",
	"bugs": "https://github.com/saplingjs/gui/issues",
	"author": {
		"name": "Oskari Groenroos",
		"email": "oskari@groenroos.fi",
		"url": "https://www.groenroos.fi"
	},
	"dependencies": {
		"@tinyhttp/app": "^2.0.22",
		"axios": "^0.27.2",
		"bulma-stylus": "^0.9.2-rc.1",
		"directory-tree": "^3.3.0",
		"dot-object": "^2.1.4",
		"get-port": "^6.1.2",
		"is-port-reachable": "^4.0.0",
		"milliparsec": "^2.2.2",
		"open": "^8.4.0",
		"prismjs": "^1.28.0",
		"sirv": "^2.0.2",
		"vue": "^2.7.10",
		"vue-prism-editor": "^1.3.0",
		"vue-router": "^3.6.0",
		"vuex": "^3.6.2",
		"yargs": "^17.5.1"
	},
	"peerDependencies": {
		"@sapling/sapling": "^0.1.0"
	},
	"devDependencies": {
		"@babel/eslint-parser": "^7.18.9",
		"cross-env": "^7.0.3",
		"laravel-mix": "^6.0.49",
		"rimraf": "^3.0.2",
		"stylus": "^0.59.0",
		"stylus-loader": "^7.0.0",
		"vue-loader": "^15.9.8",
		"vue-template-compiler": "^2.7.10",
		"xo": "^0.51.0"
	},
	"scripts": {
		"dev": "npm run development",
		"development": "rimraf dist && mix",
		"watch": "rimraf dist && mix watch",
		"hot": "rimraf dist && mix watch --hot",
		"prod": "npm run production",
		"production": "rimraf dist && mix --production",
		"prepare": "npm run production",
		"lint-fix": "xo --fix",
		"lint": "xo"
	},
	"files": [
		"dist",
		"routes",
		"index.js"
	],
	"xo": {
		"ignores": [
			"dist/**/*.*",
			"node_modules/**/*.*",
			"test/**/*.*"
		],
		"parser": "@babel/eslint-parser",
		"parserOptions": {
			"requireConfigFile": false
		},
		"rules": {
			"max-params": [
				"warn",
				{
					"max": 6
				}
			],
			"no-multiple-empty-lines": [
				"error",
				{
					"max": 2
				}
			],
			"no-await-in-loop": "off",
			"no-new": "off",
			"no-return-await": "off",
			"object-curly-spacing": [
				"error",
				"always"
			],
			"unicorn/filename-case": [
				"error",
				{
					"cases": {
						"camelCase": true,
						"pascalCase": true
					}
				}
			],
			"unicorn/numeric-separators-style": "off"
		}
	}
}
